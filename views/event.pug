extends layout 

block content 
    h1= title
    - let d3 = `dispatch(\"/Event/create\")`
    button.btn( class="btn-primary ml-1", onclick= d3) Create

   
    div.container-fluid
        div.row
            each item, index in results
                - let destination = `dispatch(\"/Event/update?id=${item._id}\")`
                - let d1 = `dispatch(\"/Event/detail?id=${item._id}\")`
                - let d2 = `dispatch(\"/Event/delete?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`) #{item["Eventname"]}, #{item["Event_id"]}, #{item["Eventtype"]}
                button.btn( class="btn-secondary ml-1", onclick= destination) Update 
                button.btn( class="btn-info ml-1", onclick= d1) Details
                button.btn( class="btn-danger ml-1", onclick= d2) Delete 
   
    script. 
          function dispatch(path){ 
           window.location.href=path 
          } 
        

    script. 
        function buy(index) {
            alert("You Event  item " + index);
        }